#include <Servo.h>

Servo myservo;

int water_Pin = A5;
int ServoPin = 10; //서보모터 핀
int trig = 7; // 트리그 핀(초음파 센서 송신부)
int echo = 6; // 에코 핀 (초음파 센서 수신부)
float duration = 0, value = 0; //초음파 센서를 통한 주기 및 거리 측정
int Pos = 0; // 서보 모터 각도 설정
const int LittlePin = 5; //버튼 핀
const int HalfPin = 6;
const int FullPin = 7;
const int analogPin = A4; // pH 센서가 연결된 아날로그 핀
float voltage; //전압
float pHValue; //pH값

void setup() 
{
  myservo.attach(ServoPin);
  myservo.write(Pos);
  pinMode(LittlePin, INPUT);
  pinMode(HalfPin, INPUT);
  pinMode(FullPin, INPUT);
  pinMode(trig, OUTPUT); 
  pinMode(echo, INPUT);
  pinMode(13, OUTPUT);                     // 디지털 13번핀을 출력모드로 설정
  Serial.begin(9600);
}

void loop()
{
  // 천장 개폐
  digitalWrite(trig, HIGH); // 초음파 발생하여 주기 측정
  delay(10);
  digitalWrite(trig, LOW);	
  
  duration = pulseIn(echo, HIGH);// pulseIn() 함수를 이용한 초음파 센서 주기 (ms) 반환
  value = ((float)(340 * duration)) / 10000 / 2; //cm 단위로 거리 변경
  Serial.println(value);

  if(value < 50){ //거리가 15cm 미만일떄
    myservo.attach(ServoPin);
    Pos = 150;
    myservo.write(Pos); // 서보모터 제어
    delay(1000);
    myservo.detach();
  }
  else{
    myservo.attach(ServoPin);
    Pos = 0;
    myservo.write(Pos);
    delay(1000);
    myservo.detach();
  }

  
  int value1 = analogRead(A0);         //조도센서에서 읽어들이는 값
  int value2 = analogRead(A5);             //읽어온 센서값 출력

  //LED 제어
  if(value1 > 500){                     //읽어온 센서값 500 기준점
    digitalWrite(13, HIGH);
    
    }             //빛이 어두우면 가로등을 킨다.
  else if(value1 < 500) {
    digitalWrite(13, LOW);                //빛이 밝으면 가로등을 끈다.
  }
  Serial.println(value1);
  delay(1000);  

  //수위 센서
  if(value2 >= 500){
    Serial.println(value2)
    Serial.println("물 넘침 위험");
  }
  else if(value2 <= 100) {
    Serial.println(value2)
    Serial.println("물 부족 위험");
  }
  delay(1000);

  // 먹이 급여
  if(digitalRead(LittlePin) == HIGH){ //버튼이 눌렸는지 확인
    Pos = 30; //서보모터 각도 지정
    myservo.write(Pos); //서보모터 제어
    delay(1000); 
    Pos = 0; //서보모터 각도 초기값으로 지정 
    myservo.write(Pos);
  }
  else if(digitalRead(HalfPin) == HIGH) {
    Pos = 60;
    myservo.write(Pos);
    delay(1000);
    Pos = 0;
    myservo.write(Pos);
  }else if(digitalRead(FullPin) == HIGH) {
    Pos = 90;
    myservo.write(Pos);
    delay(1000);
    Pos = 0;
    myservo.write(Pos);
  }

    //수질 센서

   // 아날로그 핀에서 값을 읽음
  int rawValue = analogRead(analogPin);

  // 아날로그 값을 전압으로 변환
  voltage = (rawValue / 1024.0) * 5.0;

  // 전압을 pH 값으로 변환 (이 부분은 pH 센서의 특정 데이터시트에 따라 달라질 수 있음)
  pHValue = pHValue = 7 - (voltage - VOffset); 

  // 결과를 시리얼 모니터에 출력
  Serial.println(pHValue);

  delay(1000); // 1초 동안 대기



  
 
}
